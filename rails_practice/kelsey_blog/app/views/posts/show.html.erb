<h1><%= @post.subject %></h1>
<br>
<p><%= @post.body %></p>
<br>
<p><strong>Published: </strong><%= @post.published %></p>

<tr>
  <td><%= link_to "Back", posts_path %> | </td>
  <td><%= link_to "Edit", edit_post_path %> | </td>
  <td><%= link_to "Destroy", @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>